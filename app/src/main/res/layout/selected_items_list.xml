<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/checkOutButton"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/selectedListView"
        android:layout_alignLeft="@+id/selectedListView"
        android:layout_alignEnd="@+id/selectedListView"
        android:layout_alignRight="@+id/selectedListView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="false"
        android:background="@color/colorPrimaryDark"
        android:cropToPadding="false"
        android:drawableLeft="@drawable/shoppingcart"
        android:maxHeight="90dp"
        android:paddingLeft="15dp"
        android:scaleType="fitStart"
        android:text="Check out"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#CAD302"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalPriceOfCart"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_above="@id/checkOutButton"
        android:layout_alignStart="@+id/selectedListView"
        android:layout_alignLeft="@+id/selectedListView"
        android:layout_alignEnd="@+id/selectedListView"
        android:layout_alignRight="@+id/selectedListView"
        android:background="@color/colorPrimary"
        android:gravity="right"
        android:paddingHorizontal="20dp"
        android:scaleType="fitStart"
        android:text="TOTAL = 10 â‚¬"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="22sp"
        android:textStyle="normal"
        app:fontFamily="@font/baloo" />

    <ListView
        android:id="@+id/selectedListView"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/totalPriceOfCart"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <Button
        android:id="@+id/removeAllBtn"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/totalPriceOfCart"
        android:layout_alignLeft="@+id/totalPriceOfCart"
        android:layout_alignTop="@id/totalPriceOfCart"
        android:layout_alignBottom="@id/totalPriceOfCart"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="false"
        android:background="#5FB96B"
        android:drawableLeft="@drawable/delete"
        android:maxHeight="90dp"
        android:paddingLeft="5dp"
        android:scaleType="fitStart"
        android:text="Remove all"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EB3434"
        android:textSize="12sp" />
</RelativeLayout>